//Develop a temperature conversion tool that converts temperature from fahrenheit to Celsius and vice versa.

import java.util.Scanner;

public class TemperatureConverter {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Temperature Conversion Tool");
        System.out.println("1. Fahrenheit to Celsius");
        System.out.println("2. Celsius to Fahrenheit");
        System.out.print("Enter your choice (1/2): ");
        
        int choice = sc.nextInt();
        
        if (choice == 1) {
            System.out.print("Enter temperature in Fahrenheit: ");
            double fahrenheit = sc.nextDouble();
            double celsius = (fahrenheit - 32) * 5.0/9.0;
            System.out.printf("%.2f째F is equal to %.2f째C\n", fahrenheit, celsius);
        } else if (choice == 2) {
            System.out.print("Enter temperature in Celsius: ");
            double celsius = sc.nextDouble();
            double fahrenheit = (celsius * 9.0/5.0) + 32;
            System.out.printf("%.2f째C is equal to %.2f째F\n", celsius, fahrenheit);
        } else {
            System.out.println("Invalid choice. Please select 1 or 2.");
        }
        
        sc.close();
    }
}
